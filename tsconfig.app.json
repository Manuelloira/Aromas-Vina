{
  "extends": "./tsconfig.json", // Extiende la configuraci√≥n base
  "compilerOptions": {
    "jsx": "react-jsx", // Habilita JSX (para proyectos con React)
    "outDir": "./dist", // Carpeta de salida para los archivos compilados
    "sourceMap": true // Genera mapas de fuente para debugging
  },
  "include": ["src/**/*"], // Incluye todos los archivos en la carpeta src
  "exclude": ["**/*.test.ts", "**/*.test.tsx"] // Excluye archivos de pruebas
}